@page
@model AbbyWeb.Pages.Categories.DeleteModel
@{
}
<form method="post">
    <input hidden asp-for="category.Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
        <h2 class="text-primary pl-3">Delete Category</h2>
        <hr />
        </div>
        <div class="mb-3">
            Name:<input asp-for="@Model.category.Name" class="form-control"/>
            <span asp-validation-for="category.Name" disabled class="text-danger"></span>
        </div>
        <div class="mb-3">
            Display Order:<input asp-for="@Model.category.DisplayOrder" class="form-control"/>
            <span asp-validation-for="category.DisplayOrder" disabled class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px" >Delete</button>
            <a asp-page="Index" class="btn btn-secondary" style="width:150px">Back</a>
            
        
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}